<!-- Modal -->
<div class="modal fade" id="reigster_modal" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header" style="padding:35px 50px;">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4><span class="glyphicon glyphicon-lock"></span>注册 </h4>
      </div>
      <div class="modal-body" style="padding:40px 50px;">

        <%= form_for(:user, url: users_path, method: :post, html: {role: 'form'}) do |f| %>
            <%= f.label :email, '账号密码注册' %>
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                <%= f.text_field :name, class: 'form-control', placeholder: '用户名' %>
              </div>
            </div>

            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></div>
                <%= f.email_field :email, class: 'form-control', placeholder: '邮箱' %>
              </div>
            </div>

            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                <%= f.password_field :password, class: 'form-control', placeholder: '密码' %>
              </div>
            </div>

            <%= button_tag(type: "submit", class: 'btn btn-primary btn-block') do %>
                <span class="glyphicon glyphicon-off"></span> 注册
            <% end %>

        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    $("#register_panel").click(function (e) {
      e.preventDefault();
      $("#reigster_modal").modal();
    });
  });
</script>

