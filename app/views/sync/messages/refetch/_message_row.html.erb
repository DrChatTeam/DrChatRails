<li class="mar-btm">
  <% if @chat.nil?&&chatroom_user_num(message.chat_id) < 3&&message.user.id!=current_user.id %>
    <script>
      $("div.speech-right").removeClass("speech-right").addClass("speech-read")
    </script>
  <% end %>
  <div class="media-<%= current_user.id==message.user.id ? 'right' : 'left' %>">
    <%= image_tag "user-icon.png", class: "img-sm" %>
  </div>
  <% read=read_or_not(message.chat_id, current_user.id, message.user.id, message.id) %>
  <div class="media-body pad-hor <%= "speech-read" if read %> <%= "speech-right" if !read&&current_user.id==message.user.id %>">
    <div class="speech">
      <p class="media-heading"><%= current_user.id==message.user.id ? 'æˆ‘' : message.user.name %>
        <text class="speech-time">
          <i class="fa fa-clock-o fa-fw"></i>
          <%= message.created_at.to_formatted_s(:db) %>
        </text>
      </p>
      <p style="margin-bottom: 5px; margin-top: 5px;"><%= message.body %></p>
    </div>
  </div>
</li>

<script>
    var $cont = $('.nano-content');
    $cont[0].scrollTop = $cont[0].scrollHeight;
</script>

